{
    "name": "lamp",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "description": "LAMP stack setup",
    "run_list": [
        "recipe[apt]",
        "recipe[build-essential]",
        "recipe[main::git]",
        "recipe[main::sendmail]",
        "recipe[main]",
        "recipe[main::apt]",
        "recipe[main::capistrano]",
        "recipe[main::curl]",
        "recipe[main::gearman]",
        "recipe[main::memcached]",
        "recipe[main::sqlite3]",
        "recipe[main::mysql]",
        "recipe[main::php]",
        "recipe[main::nginx]",
        "recipe[main::phpmyadmin]",
        "recipe[main::webgrind]",
        "recipe[main::supervisord]"
    ],
    "default_attributes": {
        "php": {
            "directives": {
                "date.timezone": "Europe/Brussels",
                "post_max_size": "32M",
                "short_open_tag": "On",
                "html_errors": "On"
            }
        },
        "mysql_charset": {
            "encoding": "utf8",
            "collation": "utf8_general_ci"
        },
        "nginx": {
            "install_method": "package"
        }
    },
    "override_attributes": {
        "mysql": {
            "server_root_password": "root",
            "use_upstart": false
        },
        "apache": {
            "user": "vagrant",
            "group": "vagrant"
        }
    }
}
